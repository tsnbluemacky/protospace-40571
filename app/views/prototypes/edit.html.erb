<!-- app/views/prototypes/edit.html.erb -->
<main class="main">
  <div class="inner">
    <h1 class="page-heading">編集する</h1>
    <% if @prototype.errors.any? %>
      <div class="error_messages">
        <h2>プロトタイプの編集に失敗しました：</h2>
        <ul>
          <% @prototype.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with model: @prototype, local: true, html: { multipart: true, class: 'form-inline edit-prototype-form' } do |f| %>
      <div class="form-group">
        <%= f.label :title, 'プロトタイプの名称' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :catch_copy, 'キャッチコピー' %>
        <%= f.text_field :catch_copy, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :concept, 'コンセプト' %>
        <%= f.text_area :concept, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description, '説明' %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :image, 'プロトタイプの画像' %>
        <%= f.file_field :image, class: 'form-control-file' %>
      </div>
      <div class="form-group">
        <%= f.submit '保存する', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</main>