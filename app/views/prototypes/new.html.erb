<main class="main">
  <div class="inner" style="max-width: 600px; margin: 0 auto; padding: 20px; background-color: #f8f9fa; border-radius: 10px;">
    <h1 class="page-heading" style="text-align: center; margin-bottom: 20px;">新規プロトタイプ投稿</h1>
    
    <% if @prototype.errors.any? %>
      <div class="error_messages" style="color: red; margin-bottom: 20px;">
        <h2 style="font-size: 1.2em;">プロトタイプの作成に失敗しました：</h2>
        <ul>
          <% @prototype.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @prototype, local: true, html: { multipart: true, class: 'new-prototype-form' } do |f| %>
      <div class="form-group" style="margin-bottom: 15px;">
        <%= f.label :title, 'プロトタイプの名称', style: 'font-weight: bold;' %>
        <%= f.text_field :title, class: 'form-control', style: 'width: 100%; padding: 10px; margin-top: 5px;' %>
      </div>
      <div class="form-group" style="margin-bottom: 15px;">
        <%= f.label :catch_copy, 'キャッチコピー', style: 'font-weight: bold;' %>
        <%= f.text_field :catch_copy, class: 'form-control', style: 'width: 100%; padding: 10px; margin-top: 5px;' %>
      </div>
      <div class="form-group" style="margin-bottom: 15px;">
        <%= f.label :concept, 'コンセプト', style: 'font-weight: bold;' %>
        <%= f.text_area :concept, class: 'form-control', style: 'width: 100%; padding: 10px; margin-top: 5px;' %>
      </div>
      <div class="form-group" style="margin-bottom: 20px;">
        <%= f.label :image, 'プロトタイプの画像', style: 'font-weight: bold;' %>
        <%= f.file_field :image, class: 'form-control-file', style: 'width: 100%; margin-top: 5px;' %>
      </div>
      <div class="form-group" style="text-align: center;">
        <%= f.submit '保存する', class: 'btn btn-primary', style: 'width: 100%; padding: 10px;' %>
      </div>
    <% end %>
  </div>
</main>
